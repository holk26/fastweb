const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-2xl font-bold mb-4 text-indigo-400">FastWeb</h3>
        <p class="text-gray-400">
          Un sitio web moderno construido con las mejores tecnologías web.
        </p>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4">Enlaces Rápidos</h4>
        <ul class="space-y-2">
          <li><a href="#inicio" class="text-gray-400 hover:text-white transition-colors">Inicio</a></li>
          <li><a href="#caracteristicas" class="text-gray-400 hover:text-white transition-colors">Características</a></li>
          <li><a href="#acerca" class="text-gray-400 hover:text-white transition-colors">Acerca</a></li>
          <li><a href="#contacto" class="text-gray-400 hover:text-white transition-colors">Contacto</a></li>
        </ul>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4">Tecnologías</h4>
        <ul class="space-y-2">
          <li class="text-gray-400">Astro 5.17</li>
          <li class="text-gray-400">TailwindCSS 3</li>
          <li class="text-gray-400">TypeScript</li>
        </ul>
      </div>
    </div>
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {currentYear} FastWeb. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
