---
import { useTranslations, type Language } from '@/i18n/translations';

interface Props {
  lang?: Language;
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white" role="contentinfo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-2xl font-bold mb-4 text-indigo-400">FastWeb</h3>
        <p class="text-gray-400">
          {t.footer.description}
        </p>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4">{t.footer.quickLinks}</h4>
        <ul class="space-y-2">
          <li>
            <a href="#inicio" class="text-gray-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">
              {t.nav.home}
            </a>
          </li>
          <li>
            <a href="#caracteristicas" class="text-gray-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">
              {t.nav.features}
            </a>
          </li>
          <li>
            <a href="#acerca" class="text-gray-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">
              {t.nav.about}
            </a>
          </li>
          <li>
            <a href="#contacto" class="text-gray-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">
              {t.nav.contact}
            </a>
          </li>
        </ul>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4">{t.footer.technologies}</h4>
        <ul class="space-y-2">
          <li class="text-gray-400">Astro 5.17</li>
          <li class="text-gray-400">TailwindCSS 3</li>
          <li class="text-gray-400">TypeScript</li>
        </ul>
      </div>
    </div>
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {currentYear} FastWeb. {t.footer.rights}</p>
    </div>
  </div>
</footer>
