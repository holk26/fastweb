---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { class: className, size = 'xl' } = Astro.props;

const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-6xl',
  xl: 'max-w-7xl',
};
---

<div class={`${sizeClasses[size]} mx-auto px-4 sm:px-6 lg:px-8 ${className || ''}`}>
  <slot />
</div>
